%nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} tm
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to '+ New Task', tasks_path
        - if logged_in?
          %li
            = link_to 'My Tasks', user_tasks_path(current_user)
        %li
          = link_to 'All Tasks', tasks_path
        - if admin?
          %li
            = link_to 'Users', admin_users_path

      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.email
              %span.caret
            %ul.dropdown-menu
              -# %li.divider{:role => "separator"}
              %li
                = link_to 'Log out', logout_path
        - else
          .col-md-12
            = simple_form_for(:session, url: login_path, html: {class: 'navbar-form navbar-right'}) do |f|
              .form-group
                .input-group
                  %span.input-group-addon
                    %i.glyphicon.glyphicon-user
                  = f.input :email, label: false, placeholder: 'Email'
              .form-group
                .input-group
                  %span.input-group-addon
                    %i.glyphicon.glyphicon-lock
                  = f.input :password, label: false, placeholder: 'Password'
              = f.submit 'Login', class: 'btn btn-primary'
