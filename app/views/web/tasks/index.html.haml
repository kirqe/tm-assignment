.container-fluid
  .row
    .col-md-12
      %table.table.table-condensed
        %thead
          %tr
            %th #
            %th Name
            %th Created
            %th Assigned To
            %th
        %tbody
          - @tasks.each do |task|
            %tr{class: state_color(task)}
              %td
                = task.id
              %td
                = link_to task.name, task
              %td
                .fa.fa-calendar-check-o
                = task.created_at.strftime('%D')
              %td
                = task.user.email
              %td
                = task_controlls(task)
