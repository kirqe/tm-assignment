.container-fluid
  .row
    .col-md-12
      %table.table.table-condensed
        %thead
          %tr
            %th #
            %th Name
            %th Created
            %th Assigned To
            %th
        %tbody
          - @tasks.each do |task|
            %tr{class: ("info" if task.state == "new")}
              %td
                = task.id
              %td
                = link_to task.name, task
              %td
                .fa.fa-calendar-check-o
                = task.created_at.strftime('%D')
              %td
                = task.user.email
              %td

                = state(task)
                %span{class: 'label label-default check', data: {id: task.id}}
                  %i.fa.fa-check.fa-fw
