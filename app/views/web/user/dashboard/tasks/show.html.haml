.container
  .row
    .col-md-7
      %h4
        = @task.id
        = @task.name
      %p
        = @task.description
      %p
        %h4 Attachment
        = attachment(@task)

    .col-md-5
      %h4
        current state:
        %span{ class: ("label label-#{state_color(@task)}") }
          = @task.state
      %h4
        = @task.user.email
      %h4
        added:
        = @task.created_at.strftime('%D')
